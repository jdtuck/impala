##### create an environment with the right stuff (do once)
salloc -p general

module load anaconda/Anaconda3.2019.10
conda create --name impala
source activate impala
conda install scipy numpy pandas matplotlib

pip install pathos
pip install methodtools
pip install cython
module load openmpi/2.1.3-gcc_6.4.0
pip install mpi4py

##### compile cython stuff (do once)
python setup.py build_ext --inplace # rm the .so files if it doesn’t compile anything


##### edit run_ti64.py and run_ti64.sh, then
sbatch run_ti64.sh # note, you can run multiple of these at the same time, but change “name” in run_ti64.py so they don’t write over each other
